<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/Main_RL"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginTop="@dimen/dimen_text_20">


        <ImageView
            android:id="@+id/Dialog_background"
            android:layout_marginStart="@dimen/dimen_16"
            android:layout_marginEnd="@dimen/dimen_16"
            android:layout_width="match_parent"
            android:layout_height="350dp"
            android:src="@drawable/dialog1" />

        <TextView
            android:id="@+id/Dialg_TV"
            android:layout_below="@id/Dialog_background"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/Dialog"
            android:gravity="center"
            android:layout_marginTop="-140dp"
            android:layout_marginStart="140dp"
            android:textSize="@dimen/dimen_text_25"
            android:textColor="@color/white"
            android:layout_marginEnd="140dp" />

        <RatingBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/Dialg_TV"
            android:layout_marginStart="80dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="80dp" />


    </RelativeLayout>
</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/test_background">


    <include
        android:id="@+id/Services_toolbar"
        layout="@layout/toolbar">

    </include>

    <android.support.constraint.ConstraintLayout
        android:id="@+id/Constrain"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_50">

        <TextView
            android:id="@+id/odderTotalService_TV_toolbarTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_text_16"
            android:layout_marginEnd="@dimen/dimen_180"
            android:layout_marginRight="@dimen/dimen_180"
            android:fontFamily="@font/cairo"
            android:gravity="center"
            android:text="Test"
            android:textColor="@color/white"
            android:textSize="@dimen/dimen_text_20"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


    </android.support.constraint.ConstraintLayout>

    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/Constrain">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/album_dp_10"
            android:layout_marginEnd="@dimen/album_dp_10">

            <LinearLayout
                android:id="@+id/LL1_SendOrder"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginStart="@dimen/album_dp_0"
                android:layout_marginLeft="@dimen/album_dp_0"
                android:layout_marginTop="@dimen/album_dp_15"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/Pic_Selected_Service_IV"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dimen_150"
                    android:layout_marginStart="@dimen/dimen_text_25"
                    android:layout_marginTop="@dimen/album_dp_10"
                    android:layout_marginEnd="@dimen/dimen_text_25"
                    android:background="@drawable/rectangleredshape"
                    android:src="@drawable/animal_example2" />


                <TextView
                    android:id="@+id/Option_Selected_Show_Deatils_TV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="@dimen/dimen_text_20"
                    android:layout_marginTop="@dimen/dimen_text_20"
                    android:layout_marginEnd="@dimen/dimen_text_20"
                    android:fontFamily="@font/details_font"
                    android:text="هنا يتواجد النص الذي من المفترض أن يصف الصنف والذي تعبر عنه الصورة المتواجدة بالأعلى "
                    android:textColor="@color/black" />

                <android.support.constraint.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/durban_dp_10"
                    android:layout_marginBottom="@dimen/durban_dp_10"
                    android:orientation="horizontal"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent">

                    <TextView
                        android:id="@+id/textView9"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/dimen_text_20"
                        android:layout_marginRight="@dimen/dimen_text_20"
                        android:text="@string/Kilo"
                        android:textColor="@color/black"
                        android:textSize="@dimen/dimen_text_20"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/textView10"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dimen_8"
                        android:layout_marginLeft="@dimen/dimen_8"
                        android:layout_marginEnd="@dimen/dimen_8"
                        android:layout_marginRight="@dimen/dimen_8"
                        android:text="@string/Price"
                        android:textColor="@color/red"
                        android:textSize="@dimen/dimen_text_20"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toStartOf="@+id/textView9"
                        app:layout_constraintHorizontal_bias="0.48"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <ImageView
                        android:layout_width="@dimen/durban_dp_200"
                        android:layout_height="@dimen/album_dp_0"
                        android:layout_marginTop="@dimen/dimen_24"
                        android:src="@drawable/shape_line"
                        app:layout_constraintEnd_toEndOf="@+id/textView10"
                        app:layout_constraintHorizontal_bias="0.064"
                        app:layout_constraintStart_toStartOf="@+id/textView10"
                        app:layout_constraintTop_toBottomOf="@+id/textView10" />
                </android.support.constraint.ConstraintLayout>

            </LinearLayout>

            <android.support.constraint.ConstraintLayout
                android:id="@+id/Constrain2"

                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/LL1_SendOrder"
                android:layout_marginTop="30dp">

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="348dp"
                    android:layout_marginLeft="348dp"
                    android:layout_marginTop="@dimen/dimen_8"
                    android:layout_marginEnd="@dimen/dimen_text_20"
                    android:layout_marginRight="@dimen/dimen_text_20"
                    android:layout_marginBottom="@dimen/dimen_8"
                    android:text="@string/OrderKilo"
                    android:textColor="@color/black"
                    android:textSize="20dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="@+id/scrollView2"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.022"
                    tools:ignore="NotSibling" />

                <EditText
                    android:id="@+id/Count_SendAllOrder_TV"
                    android:layout_width="@dimen/album_dp_80"
                    android:layout_height="@dimen/dimen_40"
                    android:layout_marginStart="@dimen/dimen_8"
                    android:layout_marginLeft="@dimen/dimen_8"
                    android:layout_marginTop="@dimen/dimen_8"
                    android:layout_marginEnd="@dimen/dimen_8"
                    android:layout_marginRight="@dimen/dimen_8"
                    android:background="@drawable/rectangleredshape"
                    app:layout_constraintEnd_toStartOf="@+id/textView6"
                    app:layout_constraintStart_toEndOf="@+id/relativeLayout"
                    app:layout_constraintTop_toTopOf="parent" />


                <RelativeLayout
                    android:id="@+id/relativeLayout"
                    android:layout_width="@dimen/dimen_140"
                    android:layout_height="@dimen/album_dp_45"
                    android:layout_marginTop="@dimen/dimen_8"
                    android:background="@drawable/rectangleredshape"
                    app:layout_constraintEnd_toStartOf="@+id/Count_SendAllOrder_TV"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <Spinner
                        android:id="@+id/SpinnerOne"
                        android:layout_width="@dimen/dimen_140"
                        android:layout_height="@dimen/album_dp_45"
                        android:layout_centerVertical="true"
                        android:entries="@array/Spinner1" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/relativeLayout2"
                    android:layout_width="@dimen/dimen_140"
                    android:layout_height="@dimen/album_dp_45"
                    android:layout_marginTop="@dimen/dimen_8"
                    android:background="@drawable/rectangleredshape"
                    app:layout_constraintEnd_toStartOf="@+id/Count_SendAllOrder_TV"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/relativeLayout">

                    <Spinner
                        android:id="@+id/SpinnerTWO"
                        android:layout_width="@dimen/dimen_140"
                        android:layout_height="@dimen/album_dp_45"
                        android:entries="@array/Spinner2">

                    </Spinner>

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/relativeLayout3"
                    android:layout_width="140dp"
                    android:layout_height="45dp"
                    android:layout_marginTop="@dimen/dimen_8"
                    android:background="@drawable/rectangleredshape"
                    app:layout_constraintEnd_toStartOf="@+id/Count_SendAllOrder_TV"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/relativeLayout2">

                    <Spinner
                        android:id="@+id/SpinnerThree"
                        android:layout_width="@dimen/dimen_140"
                        android:layout_height="@dimen/album_dp_45"
                        android:entries="@array/Spinner3" />

                </RelativeLayout>

                <TextView
                    android:id="@+id/Notes_TV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/dimen_text_20"
                    android:layout_marginRight="@dimen/dimen_text_20"
                    android:text="@string/Notes"
                    android:textColor="@color/black"
                    android:textSize="20dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/relativeLayout3" />

                <EditText
                    android:id="@+id/EnterNote"
                    android:layout_width="270dp"
                    android:layout_height="@dimen/dimen_90"
                    android:layout_marginStart="@dimen/dimen_8"
                    android:layout_marginLeft="@dimen/dimen_8"
                    android:layout_marginEnd="@dimen/dimen_8"
                    android:layout_marginRight="@dimen/dimen_8"
                    android:background="@drawable/rectangleredshape"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.28"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/Notes_TV" />

                <TextView
                    android:id="@+id/Total"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_16"
                    android:text="@string/OrderTotal"
                    android:textColor="@color/red"
                    android:textSize="@dimen/dimen_text_25"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/EnterNote" />

                <Button
                    android:id="@+id/OrderTotalService_BT"
                    android:layout_width="@dimen/durban_dp_200"
                    android:layout_height="@dimen/dimen_50"
                    android:layout_marginTop="@dimen/dimen_text_16"
                    android:layout_marginEnd="@dimen/durban_dp_70"
                    android:layout_marginRight="@dimen/durban_dp_70"
                    android:layout_marginBottom="@dimen/dimen_8"
                    android:background="@drawable/red_button"
                    android:gravity="center"
                    android:text="@string/AddToCard"
                    android:textColor="@color/white"
                    android:textSize="@dimen/dimen_text_25"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/Total" />


            </android.support.constraint.ConstraintLayout>

            <ImageView
                android:id="@+id/Selected_item_Back_IB"
                android:layout_width="@dimen/dimen_60"
                android:layout_height="@dimen/dimen_60"
                android:layout_below="@+id/Constrain2"
                android:layout_marginStart="@dimen/dimen_8"
                android:layout_marginLeft="@dimen/dimen_8"
                android:layout_marginBottom="@dimen/dimen_8"
                android:shadowColor="#41ff4800"
                android:src="@drawable/back_icon" />

        </RelativeLayout>
    </ScrollView>
</RelativeLayout>
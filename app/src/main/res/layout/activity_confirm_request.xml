<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/test_background">

    <include
        android:id="@+id/CofirmOrder_toolbar"
        layout="@layout/toolbar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    </include>

    <TextView
        android:id="@+id/CofirmOrder_Title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/cairo"
        android:text="@string/ConfirmRequest"
        android:textColor="@color/white"
        android:textSize="@dimen/dimen_text_20" />

    <android.support.design.widget.TextInputLayout
        android:id="@+id/Confirm_Request_phone_TI"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginStart="@dimen/dimen_text_16"
        android:layout_marginTop="@dimen/dimen_text_16"
        android:layout_marginEnd="@dimen/dimen_text_16"
        android:background="@drawable/rectangleredshape">

        <android.support.design.widget.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_40"
            android:background="@null"
            android:hint="الجوال" />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/Confirm_Request_Name_TI"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/Confirm_Request_phone_TI"
        android:layout_marginStart="@dimen/dimen_text_16"
        android:layout_marginEnd="@dimen/dimen_text_16"
        android:layout_marginBottom="@dimen/dimen_text_20"
        android:background="@drawable/rectangleredshape">

        <android.support.design.widget.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_40"
            android:background="@null"
            android:hint="الاسم" />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/Confirm_Request_Address_TI"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/Confirm_Request_phone_TI"
        android:layout_marginStart="@dimen/dimen_text_16"
        android:layout_marginTop="@dimen/dimen_text_20"
        android:layout_marginEnd="@dimen/dimen_text_16"
        android:background="@drawable/rectangleredshape">

        <android.support.design.widget.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_40"
            android:background="@null"
            android:hint="العنوان" />
    </android.support.design.widget.TextInputLayout>

    <Button
        android:id="@+id/Confirm_Request_Btn_Buy_TI"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_60"
        android:layout_below="@id/Confirm_Request_Address_TI"
        android:layout_marginStart="@dimen/dimen_50"
        android:layout_marginTop="@dimen/dimen_text_20"
        android:layout_marginEnd="@dimen/dimen_50"
        android:background="@drawable/red_button"
        android:text="تأكيد الشراء"
        android:textColor="@color/white"
        android:textSize="@dimen/dimen_text_20" />

    <ImageView
        android:id="@+id/ConfirmCode_Back_IB"
        android:layout_width="@dimen/dimen_60"
        android:layout_height="@dimen/dimen_60"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="@dimen/dimen_16"
        android:layout_marginBottom="@dimen/dimen_text_20"
        android:src="@drawable/back_icon" />

    <ImageView
        android:id="@+id/ConfirmCode_Menue_IB"
        android:layout_width="@dimen/dimen_60"
        android:layout_height="@dimen/dimen_60"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="@dimen/dimen_16"
        android:layout_marginBottom="@dimen/dimen_text_20"
        android:src="@drawable/menue_icon" />


</RelativeLayout>
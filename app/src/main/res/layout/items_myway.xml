<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:layout_marginStart="@dimen/dimen_16"
        android:layout_marginTop="@dimen/album_dp_10"
        android:layout_marginEnd="@dimen/dimen_16"
        android:background="@drawable/grayrectangleshape"
        android:orientation="vertical">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/album_dp_200"
            android:src="@drawable/animal_example2" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/album_dp_2"
            android:layout_marginStart="@dimen/album_dp_10"
            android:layout_marginEnd="@dimen/album_dp_10"
            android:background="@drawable/grayrectangleshape"
            android:layout_height="@dimen/dimen_50">

            <Spinner
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_50">

            </Spinner>
        </RelativeLayout>
        <TextView
            android:layout_marginTop="@dimen/album_dp_10"
            android:layout_marginStart="@dimen/dimen_16"
            android:layout_marginEnd="@dimen/dimen_16"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="@dimen/album_dp_20"
            android:text="هذا النص بمثابة وصف مختصر للصور(التي تعبر)عن الصنف المختار وتفاصيله "/>
    </LinearLayout>


</RelativeLayout>
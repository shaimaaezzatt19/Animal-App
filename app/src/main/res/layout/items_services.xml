<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="280dp"
        android:layout_marginStart="@dimen/dimen_16"
        android:layout_marginTop="@dimen/album_dp_10"
        android:layout_marginEnd="@dimen/dimen_16"
        android:background="@drawable/rectangleredshape">


        <ImageView
            android:id="@+id/Items_ervices_PIC_IV"
            android:layout_width="match_parent"
            android:layout_height="@dimen/durban_dp_200"
            android:layout_marginStart="@dimen/dimen_2"
            android:layout_marginTop="@dimen/album_dp_10"
            android:layout_marginEnd="@dimen/dimen_2"
            android:src="@drawable/animal_example2" />

        <TextView
            android:id="@+id/Services_AnimalName_TV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/Items_ervices_PIC_IV"
            android:layout_marginStart="150dp"
            android:layout_marginEnd="150dp"
            android:gravity="center"
            android:text="حاشي"
            android:textColor="@color/black"
            android:textSize="@dimen/dimen_text_25" />
    </RelativeLayout>

</RelativeLayout>